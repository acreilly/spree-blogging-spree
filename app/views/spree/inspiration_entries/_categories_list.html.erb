<% categories = Spree::InspirationEntry.visible.tag_counts_on(:categories).sort_by(&:count) %>
<% if categories.present? %>
  <div class="inspiration_categories_list_wrapper">
    <h6><%= Spree.t('inspiration.categories') %></h6>
    <ul class="inspiration_categories_list">
      <% categories.reverse.each do |category| %>
        <li><%= link_to category.name, inspiration_category_path(category.name) %> (<%= category.count %>)</li>
      <% end %>
    </ul>
  </div>
<% end %>